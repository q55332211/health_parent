<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.dao.OrderdDao">
    <select id="add" parameterType="com.itheima.pojo.Order">
        insert into t_order(memberId,orderDate,orderType,orderStatus,fsetmealId)
                  values (#{memberId},#{orderDate},#{orderType},#{orderStatus},#{setmealId})
    </select>

    <!--根据日期查询-->
    <select id="findByDate" parameterType="Date" resultType="long">
      select count(id) from t_order where orderDate = #{date}
    </select>

    <!--根据日期查询-->
    <select id="getOrderByMidAndSid" parameterType="map" resultType="long">
      select count(id) from t_order where member_id = #{memberId} and setmeal_id=#{setmealId}
    </select>

</mapper>
